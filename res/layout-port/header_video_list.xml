<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/header_video_list"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/header_video_list_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <LinearLayout style="@style/thumbnail_overlay"
        android:background="@drawable/header_video_list"
        >

		<com.concentricsky.android.khanacademy.views.CustomFontTextView android:id="@+id/header_video_list_title" 
			android:textAppearance="@style/text_header"
			android:layout_height="wrap_content" 
			android:layout_width="match_parent"
			/>

        <TextView android:id="@+id/header_video_list_count" 
            android:textAppearance="@style/text_meta"
            android:layout_height="wrap_content" 
            android:layout_width="match_parent"
            />

		<TextView android:id="@+id/header_video_list_description" 
			android:textAppearance="@style/text_content"
			android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
			/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_stroke"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
