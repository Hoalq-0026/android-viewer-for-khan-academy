	<style name="SeekBarkhan" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="khan_PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_khan</item>	
    </style>

    <style name="khan_DropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_khan</item>
    </style>

    <style name="khan_ActionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_khan</item>
    </style>

    <style name="khan_DropDownNav" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_khan</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_khan</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_khan</item>
    </style>
    
    <style name="khan_ProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_khan</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.khan.widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/khan_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/khan_DropDownListView</item>
    </style>

    <!-- By Concentric Sky -->

	<style name="text_header" parent="@android:style/TextAppearance.Large">
	    <item name="android:textSize">33sp</item>
	    <item name="android:textColor">@color/header_khan</item>
	</style>

    <style name="text_videoheader" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/header_khan</item>
    </style>

	<style name="text_subheader" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textColor">@color/header_khan</item>
    </style>

	<style name="text_content" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textColor">@color/body_khan</item>
	</style>

	<style name="text_meta" parent="@android:style/TextAppearance.Small">
	    <item name="android:lineSpacingMultiplier">1</item>
	</style>

    <style name="text_about" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ffefefef</item>
        <item name="android:textSize">12sp</item>
    </style>
	
	<style name="text_video_list_title" parent="@style/text_subheader"></style>
	<style name="text_video_list_description" parent="@style/text_content"></style>

	<style name="text_semitransparent_actionbar" parent="@android:style/TextAppearance.Medium">
	    <item name="android:textColor">@color/khan_green</item>
    </style>

    <!-- Topic & Video Panes -->

    <style name="topic_pane">

    </style>

    <style name="thumbnail_overlay">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/thumbnail_text_overlay_bg</item>
    </style>

    <style name="grid">
        <item name="android:padding">10dp</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>
    
</resources>
