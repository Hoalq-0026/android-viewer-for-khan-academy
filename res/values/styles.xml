	<style name="FullHeightDialog" parent="android:style/Theme.Holo.Light.Dialog">
		<item name="android:windowNoTitle">true</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_khan</item>
        <item name="android:popupMenuStyle">@style/khan_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/khan_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/khan_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/khan_DropDownNav</item>
        <item name="android:actionBarStyle">@style/khan_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_khan</item>
        <item name="android:actionModeBackground">@drawable/ab_solid_khan</item>
		<item name="android:actionModeCloseButtonStyle">@style/khan_ActionModeCloseButton</item>
		<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
		<item name="android:seekBarStyle">@style/SeekBarkhan</item>
		
	</style>
	
	<style name="MainTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_khan</item>
        <item name="android:popupMenuStyle">@style/khan_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/khan_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/khan_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/khan_DropDownNav</item>
        <item name="android:actionBarStyle">@style/khan_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_khan</item>
        <item name="android:actionModeBackground">@drawable/ab_solid_khan</item>
		<item name="android:actionModeCloseButtonStyle">@style/khan_ActionModeCloseButton</item>
		<item name="android:windowBackground">@null</item>
		<item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
		<item name="android:seekBarStyle">@style/SeekBarkhan</item>
		
    </style>
    
	<style name="VideoDetailTheme" parent="@style/MainTheme">
	    <item name="android:windowActionBarOverlay">true</item>
<!--         <item name="android:actionBarStyle">@style/khan_semitransparent_ActionBar</item> -->
	</style>

    <style name="khan_solid_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_khan</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_khan</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_khan</item>
        <item name="android:progressBarStyle">@style/khan_ProgressBar</item>
    </style>
    
    <style name="khan_semitransparent_ActionBar" parent="@style/khan_solid_ActionBar">
        <item name="android:background">#22222222</item>
        <item name="android:titleTextStyle">@style/text_semitransparent_actionbar</item>
    </style>

    <style name="khan_transparent_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_khan</item>
        <item name="android:progressBarStyle">@style/khan_ProgressBar</item>
    </style>
    
	<style name="khan_ActionModeCloseButton" parent="android:style/Widget.ActionButton.CloseMode">
	    <item name="android:background">@drawable/selectable_background_khan</item>
	</style>
    
