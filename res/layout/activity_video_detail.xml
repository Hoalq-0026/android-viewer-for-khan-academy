<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_pane_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    
	  <com.concentricsky.android.khanacademy.views.ThumbnailWrapper
	      xmlns:csky="http://schemas.android.com/apk/res-auto"
	      android:id="@+id/video_fragment_container"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      csky:ratio_width="16"
	      csky:ratio_height="9"
	      />

	  <FrameLayout
	      android:id="@+id/detail_header_container"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      />

	  <FrameLayout
	      android:id="@+id/detail_bottom_container"
	      android:layout_width="match_parent"
	      android:layout_height="0dp"
	      android:layout_weight="1"
	      />

</LinearLayout>
