<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/video_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    >

    <TextView android:id="@+id/video_points"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/points_badge_bg"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/text_meta"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        />
	    
    <com.concentricsky.android.khanacademy.views.CustomFontTextView android:id="@+id/video_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="@style/text_header"
        android:layout_toLeftOf="@id/video_points"
        android:layout_alignParentLeft="true"
        />
    
    <TextView android:id="@+id/video_description"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="@style/text_content"
        android:layout_below="@id/video_title"
        android:scrollbars="vertical"
        />

</RelativeLayout>
    