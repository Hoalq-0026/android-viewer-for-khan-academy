<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/captions_empty_background"
    >

    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/icon_subtle"
        />

    <com.concentricsky.android.khanacademy.views.CustomFontTextView android:id="@+id/text_captions_empty"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="20dp"
    	android:textAppearance="@style/text_meta"
        android:textColor="@color/body_khan"
        android:text="@string/msg_captions_unavailable"
    	/>

</LinearLayout>
